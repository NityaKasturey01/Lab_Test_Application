<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:padding="0dp"
    app:cardMaxElevation="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    app:barrierAllowsGoneWidgets="true"
    app:barrierMargin="6dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:padding="1dp"
        android:background="#E4DCF6F4">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/testNamePopularCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/roundbtn"
            android:textSize="14sp"
            android:text="Test Name"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            android:gravity="fill_vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@drawable/sample_collection_type"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/testCollectionpopularCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Collection Type"
                android:gravity="left"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            android:gravity="fill_vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_check"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/parametersPopularCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Parameters"
                android:gravity="left"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="5dp"
            android:gravity="fill_vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@android:drawable/btn_star_big_on"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/popularRatingCard"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Rating 5"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:paddingLeft="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#C924B3A5"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="5dp"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/currency_rupee_sign"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/costPopularCard"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Cost"
                android:gravity="left"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingLeft="1dp"/>
            <ImageButton
                android:id="@+id/addToCartPopularCard"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/ic_add_to_cart"/>

        </LinearLayout>
    </LinearLayout>



</androidx.cardview.widget.CardView>